{
  "name": "@skarab/skaffold",
  "version": "0.0.0-development",
  "description": "The best way to scaffold a project as I would do it myself (Kappa)",
  "type": "module",
  "bin": "./bin/index.js",
  "author": "skarab42",
  "license": "MIT",
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "build": "tsc -p ./tsconfig.build.json",
    "watch": "pnpm build --watch",
    "check": "tsc -p ./tsconfig.json",
    "lint": "eslint --max-warnings=0 .",
    "format": "prettier --check .",
    "test": "pnpm check && pnpm lint && pnpm format",
    "release": "semantic-release --branches main",
    "dev": "pnpm build && pnpm skaffold"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "lib",
    "template"
  ],
  "dependencies": {
    "chalk": "^5.0.1",
    "commander": "^9.4.0",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "inquirer": "^9.1.2",
    "project-name-generator": "^2.1.9",
    "semver": "^7.3.7",
    "validate-npm-package-name": "^4.0.0"
  },
  "devDependencies": {
    "@skarab/eslint-config": "^2.0.0",
    "@skarab/prettier-config": "^1.2.2",
    "@skarab/typescript-config": "^1.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.3",
    "@types/node": "^18.7.18",
    "@types/project-name-generator": "^2.1.1",
    "@types/semver": "^7.3.12",
    "@types/validate-npm-package-name": "^4.0.0",
    "eslint": "^8.23.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.8.3"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=7"
  },
  "packageManager": "pnpm@7.6.0",
  "keywords": [
    "typescript",
    "scaffold",
    "package",
    "project",
    "skarab",
    "strict",
    "init",
    "app"
  ]
}
